<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57407C"
    tools:context=".ui.Game3Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#3D2963"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/game_3_step_count_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#57407C" />

            <TextView
                android:id="@+id/game_3_time_count_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/game_3_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/game_3_card_1"
            style="@style/game_3_card_style"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:cardBackgroundColor="#43A4F1"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/game_3_btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="0:0"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/game_3_card_2"
            style="@style/game_3_card_style"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/game_3_card_1"
            app:cardBackgroundColor="#43A4F1"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/game_3_btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="0:1"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/game_3_card_3"
            style="@style/game_3_card_style"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/game_3_card_2"
            app:cardBackgroundColor="#43A4F1"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/game_3_btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="0:2"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>

        

        <androidx.cardview.widget.CardView
            android:id="@+id/game_3_card_5"
            style="@style/game_3_card_style"
            android:layout_below="@id/game_3_card_1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#43A4F1"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/game_3_btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="1:0"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/game_3_game_card_6"
            style="@style/game_3_card_style"
            android:layout_below="@id/game_3_card_2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/game_3_card_5"
            app:cardBackgroundColor="#43A4F1"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/game_3_btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="1:1"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/game_3_card_7"
            style="@style/game_3_card_style"
            android:layout_below="@id/game_3_card_3"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/game_3_game_card_6"
            app:cardBackgroundColor="#43A4F1"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/game_3_btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="1:2"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>

        

        <androidx.cardview.widget.CardView
            android:id="@+id/game_3_card_9"
            style="@style/game_3_card_style"
            android:layout_below="@id/game_3_card_5"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#43A4F1"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/game_3_btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="2:0"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/game_3_card_10"
            style="@style/game_3_card_style"
            android:layout_below="@id/game_3_game_card_6"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/game_3_card_9"
            app:cardBackgroundColor="#43A4F1"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/game_3_btn10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="2:1"
                android:text="10"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/game_3_card_11"
            style="@style/game_3_card_style"
            android:layout_below="@id/game_3_card_7"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/game_3_card_10"
            app:cardBackgroundColor="#43A4F1"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/game_3_btn11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="2:2"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/game_3_refresh_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/refresh_button_back"
            android:textColor="#FFFFFF"
            android:text="Refresh" />


        <Button
            android:id="@+id/game_3_pause_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/pause_button_back"
            android:textColor="#FFFFFF"
            android:text="Pause" />

    </LinearLayout>

    

</FrameLayout>