<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#57407C"
    tools:context=".ui.GameModeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/game_mode_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="#3D2963"
                android:gravity="center"
                android:text="game mode to play"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/game_mode_3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="#3D2963"
            android:padding="16dp"
            android:text="3 x 3"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/game_mode_4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="#3D2963"
            android:padding="16dp"
            android:text="4 x 4"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/game_mode_5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="#3D2963"
            android:padding="16dp"
            android:text="5 x 5"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFEFC" />

    </LinearLayout>

</LinearLayout>